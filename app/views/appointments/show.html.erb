<section class="jumbotron text-center">
    <h2 class="display-4">Appointment's Details</h2>
</section><br>

<section class="container">
    <h4 class="font-weight-light"><strong>Username:</strong> <%=@appointment.donor.username%></h4>
    <h4 class="font-weight-light"><strong>Clinic:</strong> <%= @appointment.clinic.name %></h4>
    <h4 class="font-weight-light"><strong>Date:</strong> <%= @appointment.date.strftime("%B %d, %Y") %></h4>
    <h4 class="font-weight-light"><strong>Time:</strong> <%= @appointment.time.strftime("%l:%M%p") %></h4>
</section><br>

<section class="container text-center">
    <h4 class="font-weight-light">Click <%= link_to "here", edit_donor_appointment_path(@appointment.donor_id) %> to edit appointment.</h4><br><br>
    <h2>See All Your Appointments <%= link_to @appointment.donor.username, donor_appointments_path(@appointment.donor_id) %></h2><br>
    <h4 class="font-weight-light">Click <%= link_to "here", donor_path(@appointment.donor_id) %> to go back to your details.</h4><br><br>
</section><br>