<section class="jumbotron text-center" >
    <h2 class="display-4">New Appointment</h2>
</section><br>

<section class="container text-center">
    <% if @donor %>
        <%= form_for [@donor, @appointment] do |f| %>
            <h4 class="font-weight-light"><strong><%= f.label :name, "Choose a Clinic:" %><br></strong></h4>
            <%= f.collection_select(:clinic_id, @clinics, :id, :name) %><br><br>
            <h4 class="font-weight-light"><strong><%= f.label :datetime, "When would you like to donate?" %><br></strong></h4>
            <%= f.date_field :datetime, min: Date.today %><br><br>
            <h4 class="font-weight-light"><strong><%= f.label :datetime, "What time?" %><br></strong></h4>
            <%= f.time_field :datetime %><br><br>
            <%= f.submit "Create Appointment"  %>
        <% end %><br><br> 
    <% else %>
        <%= form_for [@clinic, @appointment] do |f| %>
            <h4 class="font-weight-light"><strong><%= f.label :datetime, "When would you like to donate?" %><br></strong></h4>
            <%= f.date_field :datetime, min: Date.today %><br><br>
            <h4 class="font-weight-light"><strong><%= f.label :datetime, "What time?" %><br></strong></h4>
            <%= f.time_field :datetime %><br><br>
            <%= f.submit "Create Appointment"  %>
        <% end %><br><br>
    <% end %>

    <h4 class="font-weight-light">Click <%= link_to "here", donor_path(@appointment.donor_id) %> to go back to your details.</h4><br><br>
</section>

