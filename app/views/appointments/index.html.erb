<section class="jumbotron text-center" >
    <h2 class="display-4">Your Appointments</h2>
</section><br>

<section class="container">
  <% @donor.appointments.each do |appt| %>
    <h4 class="font-weight-light"><strong>Date: </strong><%= link_to appt.date.strftime("%B %d, %Y"), donor_appointment_path(appt.donor_id, appt) %></h4>
  <% end %><br><br>

  <h4 class="font-weight-light">Click <%= link_to "here", donor_path(@donor.id) %> to go back to your details.</h4><br><br>
</section><br>