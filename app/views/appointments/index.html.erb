<section class="jumbotron text-center" >
    <h2 class="display-4">Your Appointments</h2>
</section><br>

<ul>
  <% @donor.appointments.each do |appt| %>
    <li><%= link_to appt.datetime.strftime("%B %d, %Y"), donor_appointment_path(appt.donor_id, appt) %></li>
  <% end %>
</ul>

<section class="container text-center">
  <button class="btn btn-outline-primary">
    <%= link_to "Sign Out", signout_path, method: :delete %>
  </button>
</section>