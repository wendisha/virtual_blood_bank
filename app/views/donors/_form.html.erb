<%= form_for @donor do |f| %>
      <%= f.label :username %>
      <br>
      <%= f.text_field :username %>
  
      <%= f.label :blood_type, "Blood Type" %>
      <br>
      <%= f.text_field :height %>
  

      <%= f.label :age, "Your Age" %>
      <br>
      <%= f.number_field :happiness %>

  
      <%= f.label :nausea, "Your State" %>
      <br>
      <%= f.text_field :nausea%>

  
      <%= f.label :admin, "Check box if you are a theme park owner" %>
      <%= f.check_box :admin %>

  

      <%= f.label :password %>
      <br>
      <%= f.password_field :password%>
  

      <%= f.submit %>

  
   <% end %>
