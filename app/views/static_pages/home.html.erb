<section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading">Welcome to the Virtual Blood Bank</h1>
        <p class="lead text-muted">Book an appointment, save a life.</p>
        <p>
            <button class="btn btn-outline-primary">
                <%= link_to "Sign Up", new_donor_path %></button>
            <button class="btn btn-outline-primary">
                <%= link_to "Sign In", signin_path %></button>
        </p>
    </div>

    <div class="album py-5 bg-light">
    <div class="container">

      <div class="row">
      <div class="col-md-4" > 
      <div class="card mb-4 shadow-sm">
      <%= image_tag 'woman-donating.jpg' %>
        <div class="card-body">
          <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content.</p>
        </div>
      </div>
    </div>
        <div class="col-md-4" > 
          <div class="card mb-4 shadow-sm">
          <%= image_tag 'donation.jpg' %>
            <div class="card-body">
              <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content.</p>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
          <%= image_tag 'donating.jpg' %>
            <div class="card-body">
              <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</section>

